<div class="container">
  <div class="row">
    <div class="col one">
      {{#each burger}}
      {{#unless eaten}}
      <div class="row">
        <h1>{{id}}.{{text}}</h1>
      </div>
      {{/unless}}
      {{/each}}
    </div>
    <div class="col two">
      {{#each burger}}
      {{#unless eaten}}
      <div class="row">
        <h1>&nbsp</h1>  <!--- trick bs to make button same size as h1 above -->
        <button class="float-right btn btn-outline devour" id="{{id}}">Devour It</button>
      </div>
      {{/unless}}
      {{/each}}
    </div>
    <div class="col three ">
      {{#each burger}}
      {{#if eaten}}
      <div class="row">
        <h1>{{id}}.{{text}}</h1>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Enter burger description:</label>
    <input type="text" name="burger" id="add_burger">
  <button type="submit">Add Da Burger</button>
  </div>
</form> 